{
  "name": "openza",
  "private": false,
  "version": "0.1.0",
  "description": "A modern desktop client for managing tasks from Todoist, Microsoft To-Do, and local database",
  "author": {
    "name": "Deependra Solanky",
    "email": "deependra@solanky.dev",
    "url": "https://github.com/solankydev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/openza/openza-desktop.git"
  },
  "bugs": {
    "url": "https://github.com/openza/openza-desktop/issues"
  },
  "keywords": [
    "todoist",
    "microsoft-todo",
    "task-manager",
    "productivity",
    "electron",
    "desktop-app",
    "react",
    "typescript"
  ],
  "license": "MIT",
  "main": "electron/main.js",
  "homepage": "/",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:electron": "concurrently \"vite\" \"cross-env NODE_ENV=development electron .\"",
    "build": "vite build",
    "build:electron": "vite build && electron-builder",
    "build:win": "vite build && electron-builder --win --x64",
    "build:deb": "vite build && electron-builder --linux deb",
    "build:appimage": "vite build && electron-builder --linux AppImage",
    "preview": "vite preview",
    "start": "electron .",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "electron-rebuild": "electron-rebuild",
    "postinstall": "electron-rebuild"
  },
  "dependencies": {
    "@azure/msal-browser": "^4.15.0",
    "@azure/msal-node": "^3.6.3",
    "@doist/todoist-api-typescript": "^4.0.4",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-menubar": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "@tailwindcss/postcss": "^4.1.7",
    "@tailwindcss/vite": "^4.1.7",
    "@tanstack/react-query": "^5.77.0",
    "@tanstack/react-router": "^1.120.9",
    "@tanstack/router-devtools": "^1.120.9",
    "better-sqlite3": "^11.10.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^16.4.7",
    "lucide-react": "^0.511.0",
    "next-themes": "^0.4.6",
    "postcss": "^8.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "sonner": "^2.0.6",
    "tailwind-merge": "^3.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@tanstack/router-vite-plugin": "^1.120.9",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.15.21",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.4",
    "tailwindcss": "^4.1.7",
    "tw-animate-css": "^1.3.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.openza.app",
    "productName": "Openza",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "src/main/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.ico",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Openza",
      "artifactName": "Openza-Setup-${version}.${ext}"
    },
    "portable": {
      "artifactName": "Openza-Portable.exe"
    },
    "mac": {
      "icon": "public/icon.png",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.png",
      "category": "Office",
      "maintainer": "Openza <hello@openza.com>",
      "synopsis": "A beautiful desktop client for Todoist",
      "description": "Openza is a modern, beautiful desktop client for Todoist that provides a native experience for managing your tasks and projects."
    },
    "deb": {
      "packageCategory": "office",
      "priority": "optional",
      "depends": [
        "libgtk-3-0",
        "libnotify4",
        "libnss3",
        "libxss1",
        "libxtst6",
        "xdg-utils",
        "libatspi2.0-0",
        "libdrm2",
        "libxcomposite1",
        "libxdamage1",
        "libxrandr2",
        "libgbm1",
        "libxkbcommon0",
        "libasound2"
      ]
    },
    "asar": true,
    "extraResources": [
      {
        "from": "dist",
        "to": "dist"
      }
    ]
  }
}
